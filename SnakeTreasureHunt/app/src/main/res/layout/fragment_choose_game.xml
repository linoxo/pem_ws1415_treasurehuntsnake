<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pem_assignments.lino.workflowtestpem.GUI.ChooseGameActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/normalscreen"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <ListView
            android:id="@id/android:list"
            android:layout_width="wrap_content"
            android:layout_height="159dp"/>

    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_weight="1"
        android:text="Search People"
        android:layout_height="wrap_content"
        android:id="@+id/btnSearch"
        android:layout_above="@+id/btnStart"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btnStart"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSearch"
        android:layout_alignStart="@+id/btnSearch"
        android:clickable="false"/>


</RelativeLayout>
